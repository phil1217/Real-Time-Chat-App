@{
    ViewData["Title"] = "Video Call";
}

<div class="container mt-4">
    <div class="row">
        <!-- Local Video -->
        <div class="col-md-6">
            <h5>Your Video</h5>
            <video id="localVideo" autoplay muted playsinline class="w-100 border"></video>
        </div>

        <!-- Remote Video -->
        <div class="col-md-6">
            <h5>Remote Video</h5>
            <video id="remoteVideo" autoplay playsinline class="w-100 border"></video>
        </div>
    </div>

    <div class="mt-3">
        <button id="startCallBtn" class="btn btn-primary">Start Call</button>
        <button id="hangUpBtn" class="btn btn-danger" style="display: none;">Hang Up</button>
    </div>

    <script src="~/js/signalr/dist/browser/signalr.js"></script>
    <script src="~/lib/signalr/dist/browser/signalr-protocol-msgpack.js"></script>
    <script src="~/js/videocall.js"></script>
</div>
